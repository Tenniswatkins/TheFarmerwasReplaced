#Sets drone to harvest and set plot growing wood via trees and bushes. avoiding overcrowding trees together.
def harvestWood():
	if (get_pos_x()+get_pos_y())%2 ==0:
		if get_ground_type() == Grounds.Soil:
			harvest()
			till()
			plant(Entities.Tree)
			moveWorld()
		elif can_harvest():
			harvest()	
			plant(Entities.Tree)
			moveWorld()
		else:
			moveWorld()
	else:
		if get_ground_type() == Grounds.Soil:
			harvest()
			till()
			plant(Entities.Bush)
			moveWorld()
		elif can_harvest():
			harvest()	
			plant(Entities.Bush)
			moveWorld()
		else:
			moveWorld()		
